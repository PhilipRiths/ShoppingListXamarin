<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ShoppingList.Shared.Views.GroceryItemPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:helpers="clr-namespace:ShoppingList.Shared.Helpers;assembly=ShoppingList.Shared"
    xmlns:global="clr-namespace:;assembly=ShoppingList.Shared"
    mvvm:ViewModelLocator.AutowireViewModel="True"
    x:Name="ItemsPage"
    Title="Shopping items">
    <ContentPage.Resources>
        <ResourceDictionary>
            <global:IntEnumConverter x:Key="IntEnumConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <!--<ToolbarItem  Text="New item"
                      Command="{Binding NewItemCommand}"
                      Icon="ic_plus.png"/>-->
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>



            <ContentView Grid.Row="0" >
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Entry  Text="{Binding GroceryItem.Name, Mode=TwoWay}" TextColor="Black" 
                            Placeholder="New item.." 
                            PlaceholderColor="Gray"
                            FontSize="Medium" />
                    <Picker Grid.Column="1" ItemsSource="{Binding NewItemQuantities}" 
                            SelectedIndex="{Binding SelectedNewItemQuantity, Mode=TwoWay}"/>

                    <Picker Grid.Column="2" ItemsSource="{Binding ItemMeasurements}" 
                            SelectedIndex="{Binding SelectedNewItemMeasurement, Converter={StaticResource IntEnumConverter},Mode=TwoWay}"/>
                    <Button
                    Command="{Binding SaveCommand}"
                    Text="Save" 
                    Grid.Column="3"/>
                </Grid>
            </ContentView>
            <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" ItemsSource="{Binding Item, Mode=TwoWay}"
                      VerticalOptions="FillAndExpand"
                      HasUnevenRows="true"
                      IsPullToRefreshEnabled="true"
                      IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                      CachingStrategy="RecycleElement"
                      x:Name="GroceryItemList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <!--<ViewCell.ContextActions>
                                <MenuItem Text="Edit" 
                                          Command="{Binding Path=BindingContext.EditItemCommand, 
                                          Source={x:Reference Name=GroceryItemList}}"
                                          CommandParameter="{Binding .}"/>
                                <MenuItem Text="Delete"
                                          Command="{Binding Path=BindingContext.RemoveItemCommand, 
                                          Source={x:Reference Name=GroceryItemList}}" 
                                          CommandParameter="{Binding .}"
                                          IsDestructive="True"/>
                                
                            </ViewCell.ContextActions>-->
                            <ContentView >


                                <Grid Padding="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0" HorizontalOptions="Start" 
                                           TextColor="Black" 
                                           Text="{Binding Name, Mode=TwoWay} " 
                                        LineBreakMode="NoWrap" 
                                        Style="{DynamicResource ListItemTextStyle}" 
                                        FontSize="16" 
                                  />
                                    <Label Grid.Column="1" HorizontalOptions="End" 
                                       TextColor="Black" 
                                       Text="{Binding Quantity, Mode=TwoWay}" 
                                       LineBreakMode="NoWrap" 
                                       Style="{DynamicResource ListItemTextStyle}" 
                                       FontSize="16" />
                                    <BoxView Grid.Column="0"
                                             HeightRequest="3"
                                             IsVisible="{Binding InBasket, Mode=TwoWay}"
                                             VerticalOptions="Center"
                                             Opacity="0.5"
                                             Color="Red" />
                                    <Image Grid.Column="2" Source="delete.png" HorizontalOptions="End">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding BindingContext.RemoveItemCommand, Source={x:Reference GroceryItemList}}"
                                                CommandParameter="{Binding .}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Image Grid.Column="3" Source="pencil.png" HorizontalOptions="End">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding BindingContext.EditItemCommand, Source={x:Reference GroceryItemList}}"
                                                CommandParameter="{Binding .}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Image Grid.Column="4" Source="check.png" HorizontalOptions="End">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer
                                             Command="{Binding BindingContext.StrikeOver, Source={x:Reference GroceryItemList}}"
                                            CommandParameter="{Binding .}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Grid>

                            </ContentView>

                        </ViewCell>
                    </DataTemplate>


                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </StackLayout>
</ContentPage>